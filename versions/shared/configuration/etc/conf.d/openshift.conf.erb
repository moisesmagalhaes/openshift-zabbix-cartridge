ServerRoot "<%= ENV['OPENSHIFT_ZABBIX_DIR'] %>"
DocumentRoot "<%= "#{ENV['OPENSHIFT_ZABBIX_DIR']}/php" %>"
Listen <%= "#{ENV['OPENSHIFT_ZABBIX_IP']}:#{ENV['OPENSHIFT_ZABBIX_PORT']}" %>
User  <%= ENV['OPENSHIFT_GEAR_UUID'] %>
Group <%= ENV['OPENSHIFT_GEAR_UUID'] %>
ErrorLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_ZABBIX_DIR']}/logs/error_log-%Y%m%d-%H%M%S-%Z 86400" %>"
CustomLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_ZABBIX_DIR']}/logs/access_log-%Y%m%d-%H%M%S-%Z 86400" %>" combined
<IfVersion >= 2.4>
DefaultRuntimeDir "<%= "#{ENV['OPENSHIFT_ZABBIX_DIR']}/run"%>"
</IfVersion>
php_value include_path "<%= ".:#{ENV['OPENSHIFT_REPO_DIR']}/libs/:#{ENV['OPENSHIFT_ZABBIX_DIR']}/phplib/pear/pear/php/:/usr/share/pear/"%>"

<Directory "<%= "#{ENV['OPENSHIFT_ZABBIX_DIR']}/php" %>">
  AllowOverride All
</Directory>

